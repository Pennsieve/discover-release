[
  {
    "name": "${service_name}",
    "image": "${image_url}:${image_tag}",
    "repositoryCredentials": {
        "credentialsParameter": "${docker_hub_credentials}"
    },
    "environment": [
      { "name" : "ENVIRONMENT", "value": "${environment_name}" },
      { "name" : "SERVICE_NAME", "value": "${service_name}" },
      { "name" : "EMBARGO_BUCKET", "value": "${embargo_bucket}" },
      { "name" : "PUBLISH_BUCKET", "value": "${publish_bucket}" }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_log_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${cloudwatch_log_stream_prefix}"
      }
    }
  }
]
